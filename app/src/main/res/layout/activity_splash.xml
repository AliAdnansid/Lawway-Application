<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">

    <!-- Top right decorative element -->
    <ImageView
        android:id="@+id/ivDecorTopRight"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/splash_decorative_corner"
        android:rotation="45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- Bottom left decorative element -->
    <ImageView
        android:id="@+id/ivDecorBottomLeft"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/splash_decorative_corner"
        android:rotation="-45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"/>

    <!-- Scales of Justice Icon -->
    <ImageView
        android:id="@+id/ivScalesIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_scales_justice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"/>

    <!-- App Name -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_app_name"
        android:textColor="@color/splash_text_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/ivScalesIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Tagline -->
    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_tagline"
        android:textColor="@color/splash_text_dark"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Loading Bar Background -->
    <View
        android:id="@+id/viewLoadingBarBg"
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:background="@color/splash_loading_bar"
        android:alpha="0.3"
        app:layout_constraintBottom_toTopOf="@id/tvVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
    
    <!-- Loading Bar Fill -->
    <View
        android:id="@+id/viewProgressFill"
        android:layout_width="120dp"
        android:layout_height="4dp"
        android:background="@color/splash_loading_bar"
        app:layout_constraintBottom_toTopOf="@id/tvVersion"
        app:layout_constraintStart_toStartOf="@id/viewLoadingBarBg"
        app:layout_constraintEnd_toEndOf="@id/viewLoadingBarBg"
        android:layout_marginBottom="16dp"/>

    <!-- Version Text -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V1.0"
        android:textColor="@color/splash_text_dark"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

